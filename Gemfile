source 'https://rubygems.org'

# script/generate/views.rb
gem 'activesupport'
gem 'json'

## Jekyll
gem 'jekyll'
gem 'boostrap-sass'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby] # Windows zoneinfo
gem 'wdm', '>= 0.1.0' if Gem.win_platform? # Avoid polling for changes on Windows
group :jekyll_plugins do
  # Jekyll Assets
  gem 'jekyll-assets'
  gem 'sass'
  # Standalone
  gem 'jekyll-polyglot'
  gem 'jekyll-redirect-from'
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'jemoji'
end
